{
  "name": "@colobobo/server",
  "version": "1.0.0",
  "main": "src/server.ts",
  "repository": "https://github.com/colobobo/server",
  "author": "colobobo",
  "license": "MIT",
  "engines": {
    "node": "13.9.x"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .js,.ts",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "start": "node dist/server.js",
    "watch": "nodemon",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "library:update": "npm update @colobobo/library",
    "library:link": "npm link @colobobo/library",
    "library:unlink": "npm unlink @colobobo/library"
  },
  "dependencies": {
    "@colobobo/library": "git+https://github.com/colobobo/library.git",
    "@types/express": "^4.17.2",
    "@types/socket.io": "^2.1.4",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.2",
    "socket.io": "^2.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^1.19.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
